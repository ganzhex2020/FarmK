<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_retc_white10"
    >
    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        >

        <ProgressBar
            android:id="@+id/progressbar_update"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/bg_progress_update_shape"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tv_update_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/progressbar_update"
            app:layout_constraintLeft_toLeftOf="@+id/progressbar_update"
            android:textSize="12sp"
            android:textColor="@color/color_666"
            />

        <TextView
            android:id="@+id/tv_update_persent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/progressbar_update"
            app:layout_constraintRight_toRightOf="@+id/progressbar_update"
            android:textSize="12sp"
            android:textColor="@color/color_666"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.combodia.basemodule.view.roundview.RoundTextView
        android:id="@+id/tvUpgrad"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="立即升级"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:rv_cornerRadius="5dp"
        app:rv_backgroundColor="#b91a34"
        />


</LinearLayout>





