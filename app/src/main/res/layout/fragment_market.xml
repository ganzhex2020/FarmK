                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_bg_kuang"
                        android:orientation="vertical"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="3dp"
                                android:layout_height="15dp"
                                android:background="@drawable/bg_gradient_hometips" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="Network Hashrate History"
                                android:textColor="#bc5a37"
                                android:textSize="14sp"
                                android:fontFamily="@font/arialbd" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center_horizontal">

                            <TextView
                                android:id="@+id/tv_allHash"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#ff3202"
                                android:textSize="23sp"
                                android:fontFamily="@font/arialbd" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="EIB"
                                android:textColor="#f47b00"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Block Height:"
                                    android:textColor="#f47b00"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/arialbd"

                                    />

                                <TextView
                                    android:id="@+id/tv_blockHight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="0"
                                    android:textColor="#ff3202"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/arialbd"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Comput Power:"
                                    android:textColor="#f47b00"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/arialbd"/>

                                <TextView
                                    android:id="@+id/tv_hashProfit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="0.0 FIL/TIB"
                                    android:textColor="#ff3202"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/arialbd" />

                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Accounts:"
                                    android:textColor="#f47b00"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/arialbd"/>

                                <TextView
                                    android:id="@+id/tv_allAccount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="0"
                                    android:textColor="#ff3202"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/arialbd" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Active Miners:"
                                    android:textColor="#f47b00"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/arialbd" />

                                <TextView
                                    android:id="@+id/tv_absenteeism"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="0"
                                    android:textColor="#ff3202"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/arialbd" />

                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_centerVertical="true"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Block Generation Time:"
                                    android:textColor="#f47b00"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/arialbd" />

                                <TextView
                                    android:id="@+id/tv_timeVal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="0.0 s"
                                    android:textColor="#85b000"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/arialbd" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Block Coinbase:"
                                    android:textColor="#f47b00"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/arialbd" />

                                <TextView
                                    android:id="@+id/tv_foundVal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="0 FIL"
                                    android:textColor="#ff3202"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/arialbd" />

                            </LinearLayout>


                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>


            </com.google.android.material.appbar.AppBarLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_recy"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
</LinearLayout>