<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:background="@mipmap/ic_dikuang"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="20dp"
        android:paddingEnd="10dp"
        android:paddingBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_animal"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_cow" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"

            >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mouse"
                android:textColor="@color/color_333"
                android:textSize="14sp"
                android:fontFamily="@font/arialbd"
                />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Price:100"
                android:textColor="@color/color_title1"
                android:textSize="10sp"
                android:fontFamily="@font/arialbd"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/market_profit"
                android:textColor="@color/color_title1"
                android:textSize="10sp"
                android:fontFamily="@font/arialbd" />

            <TextView
                android:id="@+id/tv_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="20%/7 Days(25 per day)"
                android:textColor="@color/color_title1"
                android:textSize="10sp"
                android:fontFamily="@font/arialbd"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/market_sale"
                android:textColor="@color/color_title1"
                android:textSize="10sp"
                android:fontFamily="@font/arialbd" />

            <TextView
                android:id="@+id/tv_sale"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:text="10:00~14:00"
                android:textColor="@color/color_title1"
                android:textSize="10sp"
                android:fontFamily="@font/arialbd" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/market_fodder"
                android:textColor="@color/color_title1"
                android:textSize="10sp"
                android:fontFamily="@font/arialbd" />

            <TextView
                android:id="@+id/tv_fodder"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:text="1/Day"
                android:textColor="@color/color_title1"
                android:textSize="10sp"
                android:fontFamily="@font/arialbd" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/market_supply"
                android:textColor="@color/color_title1"
                android:textSize="10sp"
                android:fontFamily="@font/arialbd" />

            <TextView
                android:id="@+id/tv_supply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="500/Day"
                android:textColor="@color/color_title1"
                android:textSize="10sp"
                android:fontFamily="@font/arialbd" />


        </LinearLayout>


    </LinearLayout>
    <TextView
        android:id="@+id/tv_rushbuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-20dp"
        android:background="@mipmap/ic_zikuang"
        android:text="@string/rush_buy"
        android:textSize="14sp"
        android:fontFamily="@font/arialbd"
        />


</LinearLayout>
